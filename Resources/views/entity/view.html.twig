<div class="row">
{% for fieldSet in manager.fieldsets %}{%  if not fieldSet.isHiddenInView %}
    <div class="{{ fieldSet.cssClass }}">
        <div class="card mb-3">
            <div class="card-header font-weight-bold">{{ fieldSet.name|trans }}</div>
            <table class="table table-striped table-hover table-sm mb-0">
{% for field in fieldSet.fields|filter(field => not field.isHiddenInView) %}
                <tr><th>{{ field.label|trans }}</th></tr>
                <tr><td data-field-name="{{ field.code }}">{% apply spaceless %}
                    {%  set data = attribute(manager.resource, field.code) %}
                    {%  if field.isList %}
                        <ul class="mb-0">
                            {% for value in data %}
                                <li>{% include field.templateView with {'manager': manager, 'field': field, 'data': value} %}</li>
                            {% else %}
                                <li>-</li>
                            {% endfor %}
                        </ul>
                    {%  else %}
                        {% if (data is same as(null)) or (data is same as('')) %}
                            -
                        {% else %}
                            {% include field.templateView with {'manager': manager, 'field': field, 'data': data} %}
                        {% endif %}
                    {% endif %}
                {% endapply %}</td></tr>
{% else %}
                <tr><th>{{ 'No field to display'|trans() }}</th></tr>
{% endfor %}
            </table>
        </div>
    </div>
{% endif %}{% endfor %}
</div>
